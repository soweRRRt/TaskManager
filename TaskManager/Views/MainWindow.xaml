<Window x:Class="TaskManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное окно" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Задачи" Click="TasksMenu_Click"/>
            <MenuItem Header="Профиль" Click="ProfileMenu_Click"/>
            <MenuItem Header="Статистика" Click="StatisticsMenu_Click"/>
            <MenuItem Header="Выход" Click="LogoutMenu_Click"/>
        </Menu>
        <Frame Name="MainFrame"/>
    </DockPanel>
</Window>
